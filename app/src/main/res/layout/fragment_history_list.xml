<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jakub.osobistytrenerbiegacza.HistoryFragment">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_history_list_tv_no_history_text"
        android:id="@+id/fragment_history_list_tv_no_history"
        android:textSize="20dp"
        android:layout_below="@+id/todayHeaderText"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>

    <ListView
        android:id="@+id/fragment_history_list_lv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
